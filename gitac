;;

*)
echo
(echo -e "Algo salio mal vuelve a intentar otra opci√≥n :c\n"; echo -e "Puedes elegir las siguientes opciones:\n"; echo -e "------------------------\n"; echo -e "l = Listar Perfiles | c = Ver Cuenta Actual | h = Ayuda\n"; echo -e "------------------------\n"; echo -e "1 = frankwmm (gmail)\n"; echo -e "2 = frankmwilsonm (upeu)\n"; echo -e "3 = LFrakie (hmail)") \
